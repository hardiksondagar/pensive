{
    "manifest_version": 2,
    "name": "Pensive an extensive highlighter",
    "short_name":"Pensive",
        "description": "An extensive word highlighting tool helpful in learning new words or not miss on topics/terms of your interest go unnoticed.",
    "version": "1.0.3",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon/icon128.png"
    },
    "icons": {
        "128": "icon/icon128.png",
        "16": "icon/icon16.png",
        "32": "icon/icon32.png",
        "48": "icon/icon48.png"
    },
    "background": {
        "page": "localhost.html"
    },
    "options_page": "options.html",
    "content_scripts": [{
            "all_frames": true,
            "css": ["style.css"],
            "matches": ["\u003Call_urls\u003E"],
            "run_at": "document_end"
        }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": ["tabs", "storage", "<all_urls>", "notifications","unlimitedStorage"]


}
